<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.OnBoardingFragment1">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-200dp"
        android:layout_marginBottom="-200dp"
        android:src="@drawable/on_boarding_3"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listen to music \npowered by audius"
        android:layout_below="@id/img"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/text_color_default"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="5dp"
        android:text="Just walking can be boring, right? Well, you can listen to your favorite songs on this app powered by audius!"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="powered by audius"
        android:layout_below="@id/txt2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/audius"
        android:textStyle="italic"/>

</RelativeLayout>