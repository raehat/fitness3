<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_default_for_app">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to Wallet"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="22sp"
        android:textColor="@color/text_color_default"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You'll need to connect to a Solana wallet to use this app. If you don't have a solana wallet, you can download it"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        android:layout_below="@id/txt1"
        android:textColor="@color/text_color_default"
        android:textStyle="italic"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sol1"
        android:layout_marginTop="270dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/radiatingView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:translationZ="-1dp"
        android:layout_marginTop="332dp"
        android:src="@drawable/glow_drawable"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>