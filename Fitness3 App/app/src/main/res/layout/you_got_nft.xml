<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="350dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/confetti"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="Congratulations! You've completed 10,000 steps and earned an exclusive NFT!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_color_default"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Check your connected wallet! You'll receive the NFT shortly. You've also earned a coupon NFT that you can redeem for discounts on select sports brands!"
            android:textColor="@color/text_color_default"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
