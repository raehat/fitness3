<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.OnBoardingFragment1">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:src="@drawable/on_boarding_2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Rewards"
        android:layout_below="@id/img"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/text_color_default"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="5dp"
        android:text="For every once in a while, we will acknowledge your achievements, and provide you with an exclusive cNFT on solana blockchain!\nYou will also get cNFTs as vouchers which you can use to buy fitness related products at heavy discounts or even free!"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="powered by compressed NFTs on Solana"
        android:layout_below="@id/txt2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/solana_sol_icon"
        android:textStyle="italic"/>

</RelativeLayout>