<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color_default_for_app"
    tools:context=".onboarding.OnBoardingActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/onboarding_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="600dp"/>

    <RelativeLayout
        android:id="@+id/get_started_button_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="6dp"
        android:layout_marginTop="0dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/button_design_default_circular"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/get_started_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_started"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/get_started_button_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_24"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

    </RelativeLayout>

</RelativeLayout>